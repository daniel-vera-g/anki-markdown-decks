{
  "name": "anki-markdown-decks",
  "version": "1.0.0",
  "description": "Anki markdown decks template",
  "main": "index.js",
  "scripts": {
    "gen-europe": "md2apkg -n europe-capitals -i ./decks/european-capitals/*.md -o ./bin/europe.apkg",
    "gen-south-america": "md2apkg -n south-america-capitals -i ./decks/south-american-capitals/*.md -o ./bin/south-america.apkg",
    "prettier": "prettier --check .",
    "format": "prettier --write .",
    "lint": "markdownlint '**/*.md' --ignore node_modules",
    "postinstall": "cp node_modules/sql.js/js/sql-memory-growth.js node_modules/sql.js/js/sql.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "markdownlint-cli": "^0.27.1",
    "md2apkg": "^1.1.2",
    "prettier": "^2.3.2"
  }
}
